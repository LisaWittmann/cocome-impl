@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Personenbezogene Daten löschen";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<section>
    <div class="alert alert-warning" role="alert">
        <p>
            <strong>Durch das Löschen dieser Daten wird dein Konto dauerhaft entfernt und kann nicht wiederhergestellt werden</strong>
        </p>
    </div>
</section>

<section>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="input-wrapper">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="input--labeled" />
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        }
        <button type="submit">Daten löschen und Konto schließen</button>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}