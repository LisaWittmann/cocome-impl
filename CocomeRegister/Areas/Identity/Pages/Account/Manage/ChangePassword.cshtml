@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Passwort ändern";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<form id="change-password-form" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="input-wrapper">
        <label asp-for="Input.OldPassword"></label>
        <input asp-for="Input.OldPassword" class="input--labeled" />
    </div>
    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
    <div class="input-wrapper">
        <label asp-for="Input.NewPassword"></label>
        <input asp-for="Input.NewPassword" class="input--labeled" />
    </div>
    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
    <div class="input-wrapper">
        <label asp-for="Input.ConfirmPassword"></label>
        <input asp-for="Input.ConfirmPassword" class="input--labeled" />
    </div>
    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    <button type="submit">Passwort aktualisieren</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}